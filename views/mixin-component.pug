mixin fabbtn(content)
    button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored= content
        if block
            block

mixin rsdbtn(content)
    button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--accent= content
        if block
            block

mixin micon(name)
    i.material-icons= name


mixin user_navigation()
    div.demo-drawer.mdl-layout__drawer.mdl-color--blue-grey-900.mdl-color-text--blue-grey-50
        if block
            block

mixin user_nav_avatar(imgsrc, label)
    header.demo-drawer-header
        img.demo-avatar(src=imgsrc)
        div.demo-avatar-dropdown
            span= label
            if block
                block

mixin user_nav_avatar_items()
    div.mdl-layout-spacer
    button.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon(id='accbtn')
        i.material-icons(role='presentation') arrow_drop_down
    ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect(for='accbtn')
        li.mdl-menu__item Sair
        //li.mdl-menu__item Add another account...
            i.material-icons add

mixin user_nav_items()
    nav.demo-navigation.mdl-navigation.mdl-color--blue-grey-800
        if block
            block

mixin user_nav_newitem(text, icon='')
    a.mdl-navigation__link(href='')
        if icon!=''
            i.mdl-color-text--blue-grey-400.material-icons(role='presentation')= icon
            = text
    